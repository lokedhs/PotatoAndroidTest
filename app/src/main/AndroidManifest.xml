<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dhsdevelopments.potato">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <permission
            android:name="com.dhsdevelopments.potato.permission.C2D_MESSAGE"
            android:protectionLevel="signature"/>

    <uses-permission android:name="com.dhsdevelopments.potato.permission.C2D_MESSAGE"/>

    <application
            android:name=".PotatoApplication"
            android:allowBackup="true"
            android:fullBackupContent="@xml/backupsettings"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".channellist.ChannelListActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar"
                android:launchMode="singleTop">
        </activity>
        <activity
                android:name=".channelmessages.ChannelContentActivity"
                android:label="@string/title_channel_detail"
                android:parentActivityName=".channellist.ChannelListActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".channellist.ChannelListActivity"/>
        </activity>
        <activity android:name=".initial.PotatoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"/>

        <receiver
                android:name="com.google.android.gms.gcm.GcmReceiver"
                android:exported="true"
                android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>

                <category android:name="com.dhsdevelopments.potato.gcm"/>
            </intent-filter>
        </receiver>

        <service
                android:name=".service.PotatoGcmListenerService"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>
        <service
                android:name=".service.PotatoInstanceIDListenerService"
                android:enabled="true"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <service
                android:name=".service.ChannelSubscriptionService"
                android:enabled="true"
                android:exported="true"
                android:permission="com.dhsdevelopmens.potato.CHANNEL_SUBSCRIPTION_SERVICE_PERMISSION">
        </service>
        <service
                android:name=".service.RegistrationIntentService"
                android:exported="false">
        </service>
        <service
                android:name=".service.RemoteRequestService"
                android:exported="false">
        </service>

        <activity
                android:name=".settings.SettingsActivity"
                android:label="@string/title_activity_settings">
        </activity>
        <activity android:name=".channelmessages.settings.ChannelSettingsActivity"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
