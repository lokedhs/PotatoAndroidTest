<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="15dip"
                            android:layout_marginEnd="15dip"
                            android:layout_marginTop="15dip"
                            android:layout_marginBottom="15dip">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_display_notifications"
                        android:id="@+id/display_notifications_title"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:ellipsize="marquee" android:layout_gravity="center_vertical"
                        android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/display_notifications_checkbox"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/display_notifications_checkbox" android:gravity="center" android:enabled="true"
                        android:layout_gravity="end"
                        android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="15dip"
                            android:layout_marginEnd="15dip"
                            android:layout_marginTop="15dip"
                            android:layout_marginBottom="15dip">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_notify_unread"
                        android:id="@+id/notify_unread_title"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:ellipsize="marquee" android:layout_gravity="center_vertical"
                        android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/notify_unread_checkbox"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/notify_unread_checkbox" android:gravity="center" android:enabled="true"
                        android:layout_gravity="end"
                        android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
