<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:paddingLeft="5dp" android:paddingTop="0dp"
                android:paddingRight="5dp" android:paddingBottom="0dp">

    <ImageView
            android:id="@+id/image_content"
            android:layout_width="@dimen/chat_image_width"
            android:layout_height="@dimen/chat_image_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/chat_image_description"/>
    <TextView
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:text="Sender name"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_content"
            android:layout_marginStart="5dp" tools:ignore="HardcodedText"/>
    <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message content"
            android:layout_below="@+id/image_content"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:layout_marginTop="3dp" tools:ignore="HardcodedText"
            android:autoLink="all"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nickname"
            android:id="@+id/sender_nickname"
            android:layout_below="@+id/sender"
            android:layout_alignStart="@+id/sender"
            android:textColor="@color/dim_foreground_material_dark"
            android:textSize="10sp" tools:ignore="HardcodedText,SmallSp"/>
    <LinearLayout
            android:id="@+id/date_wrapper_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2 hours ago"
                android:textSize="12sp" android:layout_gravity="end" tools:ignore="HardcodedText"/>
        <TextView
                android:id="@+id/date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dim_foreground_material_dark"
                android:text="1 Jan 2010, 12:00"
                android:textSize="10sp" android:layout_gravity="end" tools:ignore="HardcodedText,SmallSp"/>

    </LinearLayout>
</RelativeLayout>
